{
  "name": "wishlist-monorepo",
  "private": true,
  "version": "0.0.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "bun run --filter \"./apps/*\" dev",
    "dev:web": "bun --filter web dev",
    "dev:api": "bun --filter api dev",
    "build": "bun run --filter \"./apps/*\" build",
    "lint": "bun run --filter \"./apps/*\" lint",
    "test": "bun run --filter \"./apps/*\" test",
    "db:generate": "bun --filter @wishlist/database db:generate",
    "db:push": "bun --filter @wishlist/database db:push",
    "db:migrate": "bun --filter @wishlist/database db:migrate",
    "db:studio": "bun --filter @wishlist/database db:studio",
    "db:seed": "bun --filter @wishlist/database db:seed"
  },
  "devDependencies": {
    "@types/node": "^25.2.3",
    "@types/pg": "^8.16.0",
    "prisma": "^7.4.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@prisma/adapter-libsql": "^7.4.0",
    "@prisma/client": "^7.4.0",
    "pg": "^8.18.0"
  }
}
